server {
    listen 8080;

    server_name _;

    location / {
        proxy_pass ${REMOTE_BEACON_NODE_URL};
        proxy_set_header Host ${REMOTE_BEACON_NODE_URL};
        proxy_set_header x-goog-api-key ${REMOTE_API_KEY};

        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}